@{
    ViewData["Title"] = "Sustainable Farming Hub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center mb-4">Farming Hub</h1>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="~/Images/Farming Article.jpeg" class="card-img-top" alt="Best Practices in Sustainable Farming">
                <div class="card-body">
                    <h5 class="card-title">Farming Articles</h5>
                    <p class="card-text">Read the latest news in agriculture, green energy solutions and sustainable farming</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="~/Images/Farmer`s Chat Room.jpeg" class="card-img-top" alt="Forum">
                <div class="card-body">
                    <h5 class="card-title">Forum</h5>
                    <p class="card-text">Join the forum to engage in discussions covering a variety of agriculture topics. Seek advice, share experiences, and collaborate on sustainable farming initiatives with like-minded individuals.</p>
                    <a href="#" class="btn btn-primary">Join Chat Room Now</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Events</h5>
                    <p class="card-text">Attend upcoming events on sustainable farming and the latest green energy technologies in agriculture.</p>
                    <ul class="list-group">
                        <li class="list-group-item">Green Energy in Africulture Expo - 20 July 2024 </li>
                        <li class="list-group-item">Farm Field Days - 1 August 2024</li>
                        <li class="list-group-item">AgTech Innovation Summit - 15 September 2024</li>
                    </ul>
                    <a href="#" class="btn btn-primary mt-3">View All Events</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="~/Images/Funding.jpeg" class="card-img-top" alt="Forum">
                <div class="card-body">
                    <h5 class="card-title">Funding</h5>
                    <p class="card-text">Find funding for sustainable and green energy initiatives and agricultural projects</p>
                    <a href="#" class="btn btn-primary">Read Articles</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="~/Images/Green Energy Experts.jpeg" class="card-img-top" alt="Consult Green Energy And Sustainable Farmering Experts">
                    <h5 class="card-title">Consult Green Energy and Sustainable Farming Experts</h5>
                    <p class="card-text">Consult with experts in green energy and sustainable farming to develop and implement strategies tailored to your unique style, farm, and environment, helping you achieve your sustainable farming and  energy goals.</p>
                    <a href="#" class="btn btn-primary">Explore Funding</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .card-img-top {
            object-fit: cover;
            height: 200px;
        }

        .card-title {
            color: #343a40;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
}



