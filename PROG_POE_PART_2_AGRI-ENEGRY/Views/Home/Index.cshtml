@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Welcome to Agri-Energy Connect</h1>
        <p class="lead">Empowering Sustainable Agriculture Through Technology</p>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Add Farmer</h5>
                    <p class="card-text">Start by adding new farmers and their farmer.</p>
                    <a class="btn btn-custom" asp-area="" asp-controller="Farmers" asp-action="Create">Go to Add Farmers</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Add Products</h5>
                    <p class="card-text">Sell your agricultural products online.</p>
                    <a class="btn btn-custom" asp-area="" asp-controller="Products" asp-action="Create">Go to Add Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">View and Filter Products</h5>
                    <p class="card-text">Explore available products and filter them based on your preferences.</p>
                    <a class="btn btn-custom" asp-area="" asp-controller="Products" asp-action="Filter">Go to View and Filter Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Market</h5>
                    <p class="card-text">Buy and sell green energy products for agricultural farming.</p>
                    <a class="btn btn-custom" asp-controller="Home" asp-action="Market">Go to Market</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Educational Resources</h5>
                    <p class="card-text">Learn about sustainable farming practices and technologies.</p>
                    <a class="btn btn-custom" asp-controller="Home" asp-action="EducationalResources">Go to Learning Resources</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Farming Hub</h5>
                    <p class="card-text">Connect and collaborate with farmers worldwide.</p>
                    <a class="btn btn-custom" asp-controller="Home" asp-action="Hub">Go to Farming Hub</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col text-center">
            <p>This Website Is A Product Of Code-X. Code-X, A Tanaka Industries Company</p>
        </div>
    </div>
</div>

