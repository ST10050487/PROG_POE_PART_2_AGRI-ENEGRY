@model PROG_POE_PART_2_AGRI_ENEGRY.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-header card-header-custom">
            Confirm Deletion
        </div>
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this product?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Picture
                </dt>
                <dd class="col-sm-9">
                    <img src="@Url.Action("GetImage", "Products", new { id = Model.Id })" class="img-fluid" style="max-width: 150px; max-height: 150px;" />
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.ProductionDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProductionDate)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
