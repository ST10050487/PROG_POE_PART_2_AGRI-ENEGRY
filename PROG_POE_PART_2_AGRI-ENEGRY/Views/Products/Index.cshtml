@model IEnumerable<PROG_POE_PART_2_AGRI_ENEGRY.Models.Product>

@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .product-image {
        max-width: 100px;
        max-height: 100px;
    }

    .table-custom th, .table-custom td {
        vertical-align: middle;
    }

    .table-actions a {
        margin-right: 10px;
    }
</style>

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary btn-custom">Create New Product</a>
    </div>

    <div class="card">
        <div class="card-header card-header-custom">
            Product List
        </div>
        <div class="card-body">
            <table class="table table-striped table-custom">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Picture</th>
                        <th>Price</th>
                        <th>User</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                <img src="data:image;base64,@Convert.ToBase64String(item.PictureData)" class="product-image" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@item.User.Name @item.User.Surname</td>
                            <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                            <td class="table-actions">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
