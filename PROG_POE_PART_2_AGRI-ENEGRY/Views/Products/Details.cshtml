@model PROG_POE_PART_2_AGRI_ENEGRY.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Picture
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Action("GetImage", "Products", new { id = Model.Id })" style="max-width: 100px; max-height: 100px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductionDate)
        </dd>
        <!-- Display the user's name and surname -->
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Name @Model.User?.Surname
        </dd>
        <!-- Display the category name -->
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @if (Model.Category != null)
            {
                @Html.DisplayFor(model => model.Category.CategoryName)
            }
            else
            {
                <span>No Category</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model?.Id">Details</a>
</div>
